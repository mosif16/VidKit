{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vidkit.local/schemas/edit_suggestions.schema.json",
  "title": "EditSuggestions",
  "type": "object",
  "required": ["suggestions"],
  "properties": {
    "suggestions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["priority", "action", "timestamp_hint"],
        "properties": {
          "priority": {"type": "string", "enum": ["high", "medium", "low"]},
          "action": {"type": "string"},
          "timestamp_hint": {"type": "string"}
        }
      }
    }
  }
}
